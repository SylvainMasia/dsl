Program temporal_transition initialState off {
    pluggedElements
    Actuator LED1 1
    Actuator LED2 2
    SensorDigital B1 3
    SensorDigital B2 4

    states
    off {
        LED1 = LOW
        B1 = HIGH -> on
    }
    on {
        LED1 = HIGH
        OR(B1 = HIGH, 800) -> off
        B2 = HIGH -> other
    }
    other {
        LED1 = HIGH
        LED2 = HIGH
        500 -> off
    }
}