Program very_simpe_alarm initialState off {
    pluggedElements
    Actuator red_led 2
    Actuator buzzer 3
    SensorDigital button 4

    states
    off {
        red_led = LOW
        buzzer = LOW
        button = HIGH -> on
    }
    on {
        red_led = HIGH
        buzzer = HIGH
        button = LOW -> off 
    }  
}