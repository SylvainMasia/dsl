Program very_simpe_alarm initialState off {
    pluggedElements
    Actuator red_led 3
    Actuator buzzer 4
    SensorDigital button 2

    states
    off {
        red_led = LOW
        buzzer = LOW
        button = HIGH -> on
    }
    on {
        red_led = HIGH
        buzzer = HIGH
        button = LOW -> off 
    }  
}