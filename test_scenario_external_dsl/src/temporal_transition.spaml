Program temporal_transition initialState off {
    pluggedElements
    Actuator LED1 4
    Actuator LED2 5
    SensorDigital B1 2
    SensorDigital B2 3

    states
    off {
        LED1 = LOW
        LED2 = LOW
        B1 = HIGH -> on
    }
    on {
        LED1 = HIGH
        LED2 = LOW
        AND(B1 = HIGH, 4000) -> off // means that we after 8 seconds if we press B1 we will get to the state off
        B2 = HIGH -> other
    }
    other {
        LED1 = HIGH
        LED2 = HIGH
        3000 -> off
    }
} 